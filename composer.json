    "require": {
        "php": ">=8.0",
        "laminas/laminas-diactoros": "^2.9",
        "middlewares/fast-route": "^2.0",
        "middlewares/request-handler": "^2.0",
        "narrowspark/http-emitter": "^1.0|^2.0",
        "php-di/php-di": "^6.3",
        "relay/relay": "^2.1"
